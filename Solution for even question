SELECT 
    e1.EMP_ID,
    e1.FIRST_NAME,
    e1.LAST_NAME,
    d.DEPARTMENT_NAME,
    COUNT(e2.EMP_ID) AS YOUNGER_EMPLOYEES_COUNT
FROM EMPLOYEE e1
JOIN DEPARTMENT d ON e1.DEPARTMENT = d.DEPARTMENT_ID
LEFT JOIN EMPLOYEE e2 
    ON e1.DEPARTMENT = e2.DEPARTMENT
   AND (CAST(strftime('%Y', 'now') AS INTEGER) - CAST(strftime('%Y', e2.DOB) AS INTEGER))
       < (CAST(strftime('%Y', 'now') AS INTEGER) - CAST(strftime('%Y', e1.DOB) AS INTEGER))
GROUP BY e1.EMP_ID, e1.FIR
